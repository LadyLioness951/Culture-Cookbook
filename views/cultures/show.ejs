<%- include('../partials/header') %>

<nav>
  <a href="/cultures/<%= culture._id %>/recipes/new">Add Recipe</a>
</nav>
<section id="show-page">
    <div>Culture: </div>
    <div><%= culture.name %></div>
</section>
   <div>
    <% culture.recipes.forEach(function(r) { %>
        <a href="/recipes/<%= r._id %>">
          <div id="r-img">
            <img id="r-image" src="<%= r.image %>">
            <p id="r-text"><%= r.name %></p>
          </div>
        </a>
      <% }); %>
   </div>

<%- include('../partials/footer') %> 